
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container mt-4">
    <h2>Dashboard Overview</h2>

    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-dark mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <h3>@ViewBag.TotalUsers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Cameras</h5>
                    <h3>@ViewBag.TotalCameras</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-secondary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Lenses</h5>
                    <h3>@ViewBag.TotalLenses</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-dark mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Videography</h5>
                    <h3>@ViewBag.TotalVideography</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Bar Chart -->
        <div class="col-md-6">
            <h4>Users, Cameras, Lenses & Bookings</h4>
            <canvas id="barChart"></canvas>
        </div>

        <!-- Pie Chart -->
        <div class="col-md-6">
            <h4>Booking Status</h4>
            <canvas id="pieChart"></canvas>
        </div>
    </div>
</div>

<script>
    // Bar Chart
    var ctx1 = document.getElementById('barChart').getContext('2d');
    var barChart = new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: ['Users', 'Cameras', 'Lenses', 'Bookings'],
            datasets: [{
                label: 'Total Count',
                data: [@ViewBag.TotalUsers, @ViewBag.TotalCameras, @ViewBag.TotalLenses, 230], // Replace 230 with dynamic booking count
                backgroundColor: ['red', 'blue', 'green', 'orange']
            }]
        }
    });

    // Pie Chart
    var ctx2 = document.getElementById('pieChart').getContext('2d');
    var pieChart = new Chart(ctx2, {
        type: 'pie',
        data: {
            labels: ['Completed', 'Pending', 'Cancelled'],
            datasets: [{
                data: [@ViewBag.CompletedBookings, @ViewBag.PendingBookings, @ViewBag.CancelledBookings],
                backgroundColor: ['green', 'yellow', 'red']
            }]
        }
    });
</script>
