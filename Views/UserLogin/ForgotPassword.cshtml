@{
    ViewData["Title"] = "Forgot Password";
}


<section>
    <div class="d-flex justify-content-center align-items-center" style="margin-top: 100px; margin-bottom: 100px;">
        <div class="card p-4 shadow-lg" style="width: 400px;">
            <h3 class="text-center">Forgot Password</h3>
            <form asp-action="ForgotPassword" method="post" class="mt-3">
                <input type="email" name="email" placeholder="Enter your registered email" class="form-control mt-3" required />
                @if (ViewBag.Message != null)
                {
                    <p class="text-success text-center mt-2">@ViewBag.Message</p>
                }
                <button type="submit" class="btn btn-dark btn-block mt-3">Send Reset Link</button>
            </form>
            <div class="mt-3 text-center">
                <a href="@Url.Action("ResetPassword", "UserLogin")" class="btn btn-link">Back to Login</a>
            </div>
        </div>
    </div>
</section>
