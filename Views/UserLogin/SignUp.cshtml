
@{
    ViewData["Title"] = "SignUp";
}

<h1>SignUp</h1>




<section>
    <div class="d-flex justify-content-center align-items-center" style="margin-top: 100px; margin-bottom: 100px;">
        <div class="card p-4 shadow-lg" style="width: 400px;">
            @if (ViewBag.IsLogin == true)
            {
                <div>
                    <h3 class="text-center">LOGIN</h3>
                    <div class="text-center">
                        <img src="~/assets/img/avatar.gif" style="width: 100px; height: 80px;" class="img-fluid" alt="Profile" />
                    </div>
                    <form asp-action="Login" method="post" class="mt-3">
                        <input type="email" name="email" placeholder="Email or Phone" class="form-control mt-3" required />
                        <input type="password" name="password" placeholder="Password" class="form-control mt-3" required />
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <p class="text-danger text-center mt-2">@ViewBag.ErrorMessage</p>
                        }
                        <button type="submit" class="btn btn-dark btn-block mt-3">Login</button>
                    </form>
                    <div class="mt-3 text-center">
                        <span>
                            Don't have an account?
                            <a href="@Url.Action("Signup", "Account")" class="btn btn-link">Signup</a>
                        </span>
                        <span class="ms-3">
                            <a href="@Url.Action("ForgotPassword", "Account")" style="font-size: 13px;">Forgot password?</a>
                        </span>
                    </div>
                </div>
            }
            else
            {
                <div>
                    <h3 class="text-center">SIGNUP</h3>
                    <div class="text-center">
                        <img src="~/images/signup.png" style="width: 100px; height: 80px;" class="img-fluid" alt="Avatar" />
                    </div>
                    <form asp-action="Signup" method="post" class="mt-3">
                        <input type="text" name="name" placeholder="Full Name" class="form-control mt-3" required />
                        <input type="email" name="email" placeholder="Email" class="form-control mt-3" required />
                        <input type="text" name="phone" placeholder="Phone" class="form-control mt-3" required />
                        <input type="text" name="address" placeholder="Address" class="form-control mt-3" required />
                        <input type="password" name="password" placeholder="Password" class="form-control mt-3" required />
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <p class="text-danger text-center mt-2">@ViewBag.ErrorMessage</p>
                        }
                        <button type="submit" class="btn btn-dark btn-block mt-3">Signup</button>
                    </form>
                    <div class="text-center mt-3">
                        <p>
                            Already have an account?
                            <a href="@Url.Action("Login", "Account")" class="btn btn-link">Login</a>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
