
@{
    ViewData["Title"] = "Contact";
}

<section>
    <h1 className="mb-4">Contact Us</h1>
    <div className="container-fluid">
        <div className="row justify-evenly">
            {/* Contact Form Section */}
            <div className="col-md-6 col-lg-6 col-sm-12">
                <div className="container contact-form">
                    <div className="contact-image">
                        <img src="https://image.ibb.co/kUagtU/rocket_contact.png"
                             alt="rocket_contact" />
                    </div>
                    <form method="post">
                        <h3>Drop Us a Message</h3>
                        <div className="row">
                            <div className="col-md-6 col-lg-6 col-sm-12">
                                <div className="form-group">
                                    <input type="text"
                                           name="txtName"
                                           className="form-control"
                                           placeholder="Your Name *" />
                                </div>
                                <div className="form-group">
                                    <input type="text"
                                           name="txtEmail"
                                           className="form-control"
                                           placeholder="Your Email *" />
                                </div>
                                <div className="form-group">
                                    <input type="text"
                                           name="txtPhone"
                                           className="form-control"
                                           placeholder="Your Phone Number *" />
                                </div>
                                <div className="form-group">
                                    <input type="button"
                                           name="btnSubmit"
                                           className="btnContact"
                                           value="Send Message" />
                                </div>
                            </div>
                            <div className="col-md-6 col-lg-6 col-sm-12">
                                <div className="form-group">
                                    <textarea name="txtMsg"
                                              className="form-control"
                                              placeholder="Your Message *"
                                              style={{ width: "100%" , height: "120px" }}></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div className="col-md-6 col-lg-6 col-sm-12">
                <div style={{
                     position: "relative" ,
                     overflow: "hidden" ,
                     paddingBottom: "41.25%" ,
                     }}>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3692.424027923932!2d70.75028447506818!3d22.261921979714224!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3959cbaf9787c173%3A0x8f107a3a70a8ad61!2sRK%20University%20City%20Campus!5e0!3m2!1sen!2sin!4v1738002514644!5m2!1sen!2sin"
                            style={{
                            position: "absolute" ,
                            top: 0,
                            left: 0,
                            width: "100%" ,
                            height: "100%" ,
                            borderRadius: "8px" ,
                            }}
                            allowFullScreen=""
                            loading="lazy"
                            referrerPolicy="no-referrer-when-downgrade"></iframe>
                    <h3 className="text-primary">Follow us</h3>
                </div>
            </div>
        </div>
    </div>
</section>
