
@{
    ViewData["Title"] = "DSLR";
}

<style>


    .container {
        display: flex;
        align-items: center;
        margin: 68px auto;
        justify-content: space-around;
    }

    .text {
        font-size: 2rem;
        font-weight: bold;
    }

    .dslr-image img {
        width: 100%;
        max-width: 400px;
        height: auto;
        border-radius: 10px;
    }

    .gallery-section {
        margin-top: 30px;
        max-width: 90%;
        margin-left: auto;
        margin-right: auto;
    }

    .gallery-heading {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .scroll-container {
        display: flex;
        overflow-x: auto;
        gap: 10px;
        white-space: nowrap;
        padding-bottom: 10px;
        scrollbar-width: none;
    }

    .scroll-container::-webkit-scrollbar {
        display: none;
    }

    .scroll-container img {
        width: 150px;
        height: 100px;
        border-radius: 5px;
        object-fit: cover;
    }



    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: Arial, sans-serif;
        padding: 20px;
        width: 100vw;
        overflow-x: hidden;
    }

    .gallery-section {
        margin-top: 30px;
        max-width: 90%;
        margin-left: auto;
        margin-right: auto;
    }

    .gallery-heading {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .scroll-container {
        display: flex;
        overflow-x: auto;
        gap: 15px;
        padding-bottom: 10px;
        scrollbar-width: none;
    }

        .scroll-container::-webkit-scrollbar {
            display: none;
        }

    .card {
        width: 180px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 10px;
        text-align: center;
    }

        .card img {
            width: 100%;
            height: 120px;
            border-radius: 5px;
            object-fit: cover;
        }

        .card .name {
            font-size: 1rem;
            margin-top: 5px;
            font-weight: bold;
        }

        .card .price {
            font-size: 0.9rem;
            color: #28a745;
            margin-top: 3px;
        }
</style>

